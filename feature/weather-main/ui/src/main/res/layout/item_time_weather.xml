<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="58dp"
    android:layout_height="116dp"
    android:paddingVertical="4dp"
    android:paddingHorizontal="4dp">

    <View
        android:id="@+id/red_dot_view"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/red_dot_background"
        android:layout_gravity="center_horizontal"
        >
    </View>

    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="50dp"
        android:layout_height="14dp"
        android:layout_marginTop="@dimen/item_vertical_gap"
        android:layout_gravity="center_horizontal"
        android:gravity="top|center_horizontal"
        android:textSize="12sp"
        tools:text="15:00"
        android:textColor="@color/item_black_text_color"
        android:fontFamily="@font/figtree_regular">
    </TextView>
    
    <LinearLayout
        android:id="@+id/middle_liner_layout"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/item_vertical_gap"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/humidity_text_view"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="95%"
            android:fontFamily="@font/figtree_medium"
            android:gravity="center"
            android:textColor="@color/blue_600"
            />

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/item_weather_icon"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_liner_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/item_vertical_gap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temperature_text_view"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:fontFamily="@font/figtree_regular"
            android:gravity="top|center_horizontal"
            android:textColor="@color/item_black_text_color"
            android:textSize="12sp"
            tools:text="23°" />

        <TextView
            android:id="@+id/сelsius_text_view"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:fontFamily="@font/figtree_regular"
            android:gravity="top"
            android:text="c"
            android:textColor="@color/item_black_text_color"
            android:textSize="11sp" />

    </LinearLayout>

</LinearLayout>